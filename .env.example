# Hierarchical Memory Middleware Configuration
# Copy this file to .env and customize the values

# Model Configuration
WORK_MODEL=claude-4-sonnet
SUMMARY_MODEL=claude-4-sonnet
EMBEDDING_MODEL=text-embedding-3-small

# Hierarchy Configuration
RECENT_NODE_LIMIT=10
SUMMARY_THRESHOLD=20
META_SUMMARY_THRESHOLD=50
ARCHIVE_THRESHOLD=200

Storage Configuration
DB_PATH=./conversations.db
BACKUP_INTERVAL_MINUTES=5

MCP Server Configuration
MCP_PORT=8000
ENABLE_MCP_TOOLS=true

# Example with custom values:
WORK_MODEL=claude-opus
DB_PATH=/var/lib/memory/conversations.db
RECENT_NODE_LIMIT=15
MCP_PORT=9000
